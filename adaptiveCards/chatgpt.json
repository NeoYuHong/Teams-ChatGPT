{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "ChatGPT Bot [${username}]\n\n"
    },
    {
      "type": "TextBlock",
      "size": "extraLarge",
      "weight": "bolder",
      "text": " "
    },
    {
      "type": "TextBlock",
      "text": "Prompt:",
      "wrap": true
    },
    {
      "type": "Container",
      "style": "emphasis",
      "items": [
        {
          "type": "TextBlock",
          "text": "${prompt}",
          "wrap": true
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Response:",
      "wrap": true
    },
    {
      "type": "Container",
      "style": "emphasis",
      "items": [
        {
          "type": "TextBlock",
          "text": "${response}",
          "wrap": true
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4"
}